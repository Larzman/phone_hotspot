Register
<br/>
<%= form_tag("/net/register", method: "post") do %>
  <%= label_tag(:ip, "IP:") %>
  <%= text_field_tag(:ip) %>
  <br/>
  <%= label_tag(:name, "Name:") %>
  <%= text_field_tag(:name) %>
  <br/>  
  <%= label_tag(:network, "Network:") %>
  <%= text_field_tag(:network) %>
  
  <%= submit_tag("Submit") %>
<% end %>

